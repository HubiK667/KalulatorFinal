<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Definiowanie zaokrąglonych rogów -->
        <corners android:radius="8dp" />

        <!-- Definiowanie ramki -->
        <stroke
            android:color="#FF5722"
            android:width="2dp" />

        <!-- Wypełnienie tłem -->
        <solid android:color="#fc7f03" /> <!-- Kolor tła (biały) -->

        <!-- Opcjonalnie: Cień -->
        <padding
            android:left="4dp"
            android:right="4dp"
            android:top="4dp"
            android:bottom="4dp" />
    </shape>

</selector>